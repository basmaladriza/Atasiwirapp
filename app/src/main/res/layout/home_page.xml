<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/suvenir_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suvenir"
                android:textAlignment="center"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="331dp"
                tools:layout_editor_absoluteY="318dp" />

            <ImageView
                android:id="@+id/wisata_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/wisata"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="246dp" />

            <ImageView
                android:id="@+id/suvenir_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/wisata"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="246dp" />

            <LinearLayout
                android:id="@+id/wisata_populer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="344dp">

                <TextView
                    android:id="@+id/wisata_populer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Wisata Populer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wisata_text" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/kuliner_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/wisata"
                tools:layout_editor_absoluteX="221dp"
                tools:layout_editor_absoluteY="246dp" />

            <TextView
                android:id="@+id/wisata_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisata"
                android:textAlignment="center"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="318dp" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="636dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="28dp"
                    android:text="Atasiwirapp"
                    android:textColor="#0F88C5"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/logout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="28dp"
                    android:background="@android:drawable/screen_background_light_transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_logout_svgrepo_com" />

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/profile_picture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="44dp"
                    android:text="Zhong Xina"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/profile_pic"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="zhongxina@gmail.com"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/profile_pic"
                    app:layout_constraintTop_toBottomOf="@+id/profile_name" />

                <TextView
                    android:id="@+id/profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Sunting Profil"
                    android:textColor="#0F88C5"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/profile_pic"
                    app:layout_constraintTop_toBottomOf="@+id/profile_email" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/hotel_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/wisata"
                tools:layout_editor_absoluteX="127dp"
                tools:layout_editor_absoluteY="246dp" />

            <TextView
                android:id="@+id/hotel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:textAlignment="center"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="318dp" />

            <TextView
                android:id="@+id/kuliner_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuliner"
                android:textAlignment="center"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="318dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>